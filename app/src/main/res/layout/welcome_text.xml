<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/welcomeText_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/welcome_box"
    android:gravity="center">

        <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Välkommen till SoffCoachen!"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textColor="@color/dark_gray" />

        <TextView
        android:id="@+id/leadText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forumet för allsvenskan-entusiaster. Oavsett lag, oavsett ämne."
        android:textSize="13sp"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:textColor="@color/dark_gray" />

        <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray"
        android:layout_marginVertical="16dp"/>

        <TextView
        android:id="@+id/pointOneText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- Har du en tanke som gnager?"
        android:textSize="17sp"
        android:layout_marginTop="8dp"
        android:textColor="@color/dark_gray" />

        <TextView
        android:id="@+id/pointTwoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- Vill du veta mer om de senaste ryktena?"
        android:textSize="17sp"
        android:layout_marginTop="8dp"
        android:textColor="@color/dark_gray" />

        <TextView
        android:id="@+id/opinionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vädra dina åsikter och hoppas på medhåll."
        android:textSize="17sp"
        android:layout_marginTop="12dp"
        android:textColor="@color/dark_gray" />

        <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray"
        android:layout_marginVertical="16dp"/>

        <TextView
        android:id="@+id/registerPrompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Har du inget konto? Skapa det genom att klicka på Register"
        android:textSize="14sp"
        android:textColor="@color/dark_gray" />
</LinearLayout>
