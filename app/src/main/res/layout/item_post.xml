<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/post_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/post_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Author"
                android:textSize="20sp"
                android:layout_marginEnd="10dp"
                android:clickable="true"
                android:focusable="true"
                android:textColor="?attr/colorPrimary"
                android:textColorHighlight="?attr/colorAccent"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/post_author_team"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Author Team"
                android:textSize="10sp"
                android:background="@drawable/badge_background_dark"
                android:textColor="@android:color/white"
                android:padding="7dp"
                android:layout_marginEnd="10dp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/post_date_posted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date Posted"
                android:textSize="10sp"
                android:textStyle="italic"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/badge_background_light"
            android:orientation="horizontal"
            android:layout_marginTop="3dp">

            <TextView
                android:id="@+id/post_team"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="Date Posted"
                android:layout_marginEnd="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="/"
                android:layout_marginEnd="5dp"/>

            <TextView
                android:id="@+id/post_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="Date Posted"
                android:layout_marginEnd="10dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/post_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Post Title"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/post_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Post Content"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/post_no_of_likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="-1"
                android:background="@drawable/badge_background_light"
                android:paddingRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentStart="true" />

            <Button
                android:id="@+id/postActivity_postLikeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Like"
                android:layout_toEndOf="@id/post_no_of_likes"
                android:layout_marginStart="-15dp" />
        </RelativeLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
